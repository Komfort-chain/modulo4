<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Nível mínimo de log -->
    <property name="LOG_LEVEL" value="INFO" />

    <!-- Configuração do Graylog -->
    <appender name="GRAYLOG" class="de.siegmar.logbackgelf.GelfUdpAppender">
        <graylogHost>${ENV_GRAYLOG_HOST:-graylog}</graylogHost>
        <graylogPort>${ENV_GRAYLOG_PORT:-12201}</graylogPort>
        <includeFullMdc>true</includeFullMdc>
        <shortMessagePattern>%m%nopex</shortMessagePattern>
        <facility>lambda-kafka</facility>
    </appender>

    <!-- Log padrão no console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="GRAYLOG" />
    </root>
</configuration>
